extends layout

block content
  .container
    h1='Mosaico'
      each personaje in personajes
          .card(style='width: 18rem')
                img.card-img-top(src=personaje.image alt='.')
                .card-body
                    h5.card-title Nombre: #{personaje.name}
                        h6.card-subtitle.mb-2.text-muted  Genero: #{personaje.gender}
                        p.card-text
                        | Fecha:  #{personaje.created}
                        br 

